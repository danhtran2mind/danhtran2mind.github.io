{%- comment -%}
  Load the “additional_information” object from _data/cv.json
  and display each entry as:
  🔗 Certificate Details: https://google.com
  🔗 Certification Details: https://google.com
  …
  Handles array of objects: [{"certificate details": "google.com"}, ...]
{%- endcomment -%}

{% assign addInfo = site.data.cv.additional_information %}

<div class="additional-info">
  <ul class="list-unstyled">
    {% if addInfo %}
      {% for item in addInfo %}
        {% for pair in item %}
          {% assign label = pair[0] | capitalize %}
          {% assign url = pair[1] %}

          {% assign display_url = url %}

          {% endif %}

          <table style="width: 100%; border-collapse: collapse;">
            <tr style="display: flex; align-items: center; margin-bottom: 0.5rem;">
              <td style="flex: 0 0 auto; margin-right: 2rem;">
                <strong>{{ label }}:</strong>
              </td>
              <td style="flex: 1;">
                <i class="fa-solid fa-link" style="color: var(--global-theme-color); margin-right: 0.5rem;"></i>
                <a href="{{ display_url }}" target="_blank" rel="noopener">{{ display_url }}</a>
              </td>
            </tr>
          </table>
          
        {% endfor %}
      {% endfor %}
    {% else %}
      <li class="mb-2 text-danger">
        Error: No additional_information data found in _data/cv.json
      </li>
    {% endif %}
  </ul>
</div>