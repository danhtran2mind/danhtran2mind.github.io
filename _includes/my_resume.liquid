    {% assign lang_certs = cv.data.language_certifications %}

    <div class="more-info-wrapper">
        <!-- LEFT: More Information -->
        <section class="cv-section more-info-column" id="more_information" style="margin-left: 1rem !important; margin-right: 0rem !important; padding-left: 0px; padding-right: 0px; margin-bottom: 0px !important; padding-bottom: 0px;">
