/* ---------- DOWNLOAD PDF directly ---------- */
    function downloadDiv() {
        const pdfUrl = '/assets/pdf/resume/RESUME _ Danh Tran.pdf';
        const link = document.createElement('a');
        link.href = pdfUrl;
        link.download = 'RESUME_Danh_Tran.pdf';
