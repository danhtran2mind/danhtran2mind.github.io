                <div class="cv-item" style="margin-bottom: 0rem;">
                    <div class="cv-item-row more-info">
                        <div class="cv-item-title" style="text-align: right; padding-right: 0.1rem; margin-top: 0rem;">{{ item.name }}</div>
                        {% if item.url %}
                            <span>•</span>
                            <div class="cv-item-title" style="text-align: left; padding-left: 0.1rem; margin-top: 0rem;">
                                <a href="{{ item.url }}">{{ item.url | replace: 'https://', '' }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- RIGHT: Language Certifications -->
        <section class="cv-section more-info-column" id="language_certifications" style="margin-left: 1rem !important; margin-right: 0rem !important; padding-left: 0px; padding-right: 0px; margin-bottom: 0px !important; padding-bottom: 0px;">
            <header class="cv-section-header">
                <h2 class="text-primary cv-section-title">{{ lang_certs.title }}</h2>
