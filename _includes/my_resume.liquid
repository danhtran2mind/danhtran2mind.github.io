    <!-- Name and Avatar -->
    <header class="name-slogan">
        <img class="cv-photo" src="{{cv.photo}}" alt="my photo" style="border-left-style: solid; border-left-width: 0px; border-right-width: 0px; border-right-style: solid; margin-left: 2em; padding-left: 0px; margin-right: 2em;"/>
        <h1 class="cv-name" style="border-right-width: 0px; border-right-style: solid; text-align: left;">{{cv.name}}</h1>
        <span class="text-muted">{{cv.tagline}}</span>
    </header>

    <!-- Basic Info -->
    <header class="contact-block" style="border-bottom-width: 0em;">
        <div style="display: flex; flex-direction: row; justify-content: left; align-items: left; gap: 0.5rem; flex-wrap: wrap; text-align: left;">
            {% if cv.date_of_birth %}
                <span class="contact-block" style="margin-left: 0em;">
                    <img src="{{ '/assets/svg/date_of_birth.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="date_of_birth icon"/>
                    <span class="contact">{{cv.date_of_birth | markdownify}}</span>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.location %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/location.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="location icon"/>
                    <span class="contact">{{cv.location}}</span>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.email %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/email.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="email icon"/>
                    <a class="contact" href="mailto:{{cv.email}}">{{cv.email}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.phone %}
                <span class="contact-block" style="margin-right: 0em;">
                    <img src="{{ '/assets/svg/phone.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="phone icon"/>
                    <a class="contact" href="tel:{{cv.phone}}">{{cv.phone}}</a>
                </span>
            {% endif %}
        </div>
    </header>

    <!-- Social Links -->
    <section class="cv-basic-info" style="display: flex; justify-content: center; margin: 0 1em 2em 1em;">
        <div class="basic-info-div" style="display: flex; flex-direction: row; justify-content: center; gap: 0.5em; flex-wrap: wrap;">
            {% if cv.github %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/github.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="github icon"/>
                    <a class="contact" href="{{cv.github}}">{{cv.github | replace: 'https://github.com/', ''}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.huggingface %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/huggingface.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="huggingface icon"/>
                    <a class="contact" href="{{cv.huggingface}}">{{cv.huggingface | replace: 'https://huggingface.co/', ''}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.website %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/website.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="website icon"/>
                    <a class="contact" href="{{cv.website}}">{{cv.website | replace: 'https://', ''}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.linkedin %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/linkedin.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="linkedin icon"/>
                    <a class="contact" href="{{cv.linkedin}}">{{cv.linkedin | replace: 'https://www.linkedin.com/in/', ''}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.x %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/x.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="x icon"/>
                    <a class="contact" href="{{cv.x}}">{{cv.x | replace: 'https://x.com/', ''}}</a>
                </span>
            {% endif %}
            <span>•</span>
            {% if cv.facebook %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/facebook.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="facebook icon"/>
                    <a class="contact" href="{{cv.facebook}}">{{cv.facebook | replace: 'https://facebook.com/', ''}}</a>
                </span>
            {% endif %}
        </div>
    </section>

    <!-- Main Sections (excluding additional_info) -->
    {% for sec_id in cv.sections %}
        {% assign section = cv.data[sec_id] %}
        {% unless sec_id == 'additional_info' %}
        <section class="cv-section" id="{{sec_id}}">
            <header class="cv-section-header">
                <h2 class="text-primary cv-section-title">{{section.title}}</h2>
            </header>

            {% if sec_id == 'education' %}
                {% for item in section.items %}
                    <div class="cv-item">
                        <div class="cv-item-row degree">
                            <div><span>{{item.degree}}</span></div>
                            {% if item.thesis %}<div><em>GPA:</em> <span>{{item.gpa}}</span></div>{% endif %}
                            <div><span>{{item.date | markdownify}}</span></div>
                        </div>
                        <div class="cv-item-content edu instustute">
                            <em>University:</em>
                            <span class="university-name">{{item.university | markdownify | strip_html}}</span>
                        </div>
                        {% if item.thesis %}
                            <div class="cv-item-content edu document">
                                <em>Thesis:</em>
                                <span class="thesis-name"><p style="display:inline;">{{item.thesis | strip_html}}</p></span>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}

            {% elsif sec_id == 'projects' %}
                <div class="three-column-section">
                    {% for item in section.items %}
                        <div class="cv-item">
                            <div class="cv-item-row two-columns" style="display: inline;">
                                <div class="cv-item-row-name"><span>{{item.name}}</span></div>
                                <div class="project-date" style="display: flex; justify-content: space-between; font-size: 0.73rem !important;">
                                    <div class="project-url">
                                        {% if item.url %}
                                            {% if item.url contains 'github.com' %}
                                                <img src="{{ '/assets/svg/github.svg' | relative_url }}" style="width: 11px; height: 11px;" alt="GitHub icon"/>
                                                <a href="{{ item.url }}">{{ item.url | replace: 'https://github.com/', '' }}</a>
                                            {% elsif item.url contains 'huggingface.co' %}
                                                <img src="{{ '/assets/svg/huggingface.svg' | relative_url }}" style="width: 11px; height: 11px;" alt="Hugging Face icon"/>
                                                <a href="{{ item.url }}">{{ item.url | replace: 'https://huggingface.co/', '' }}</a>
                                            {% else %}<span></span>{% endif %}
                                        {% else %}<span></span>{% endif %}
                                    </div>
                                    <div><span>{{item.date | markdownify}}</span></div>
                                </div>
                            </div>
                            {% if item.description %}
                                <div class="cv-item-content about">
                                    <span style="font-style: italic;"><p style="display:inline;">{{item.description | markdownify | strip_html}}</p></span>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
                <div class="cv-item-content more">
                    <em>For further details on additional projects, please refer to 
                        <a href="#more_information" style="color: var(--cv-accent-color); text-decoration: none; font-weight: 700;">More Information.</a>
                    </em>
                </div>

            {% elsif sec_id == 'certificates' %}
                <div class="three-column-section">
                    {% for item in section.items %}
                        <div class="cv-item">
                            <div class="cv-item-row two-columns" style="display: inline;">
                                <div class="cv-item-row-name"><span>{{item.name}}</span></div>
                                <div style="display: flex;justify-content: space-between;">
                                    <div>
                                        {% if item.url %}
                                            <a href="{{ item.url }}" target="_blank" style="margin-right: 0.15rem;">{{ item.provider_issuer }}</a>
                                            <img src="/assets/svg/url.svg" style="width: 11px; height: 11px;" alt="url icon">
                                        {% else %}
                                            <span>{{ item.provider_issuer }}</span>
                                        {% endif %}
                                    </div>
                                    <div><span>{{item.date | markdownify}}</span></div>
                                </div>
                            </div>
                            <div class="cv-item-content about cert">
                                {% if item.description %}
                                    <p style="display:inline;">{{item.description | markdownify | strip_html}}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="cv-item-content more">
                    <em>For a detailed and comprehensive list of certificates, please consult the additional information provided in the
                        <a href="#more_information" style="color: var(--cv-accent-color); text-decoration: none; font-weight: 700;">More Information.</a>
                    </em>
                </div>

            {% elsif sec_id == 'experience' %}
                {% for item in section.items %}
                    <div class="cv-item">
                        <div class="cv-item-row" style="display: flex; justify-content: space-between;">
                            <div style="width: 40%;">{{item.job_title | markdownify}}</div>
                            <div style="width: 30%;">{{item.organization | markdownify}}</div>
                            <div style="width: 25%; text-align: right;">{{item.date | markdownify}}</div>
                        </div>
                        <div class="cv-item-content" style="line-height: 0.9;">
                            {% if item.description %}
                                <div><em>Description:</em> <span class="experience-description"><p style="display:inline;">{{item.description | markdownify | strip_html}}</p></span></div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}

            {% elsif sec_id == 'skills' %}
                <div class="skills-grid three-column-section">
                    {% for group in section.items %}
                        <div class="cv-item">
                            <div class="cv-item-row"><span>{{ group.group_name }}</span></div>
                            <div class="cv-item-content">
                                {% for skill in group.group_name_elements %}
                                    {{ skill.element }}{% if forloop.last == false %}, {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

            {% endif %}
        </section>
        {% endunless %}
    {% endfor %}

    <!-- MORE INFORMATION & LANGUAGE CERTIFICATIONS (like in 2)) -->
